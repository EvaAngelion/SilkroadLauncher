<Window x:Class="SilkroadLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:htmlrender="clr-namespace:TheArtOfDev.HtmlRenderer.WPF"
        xmlns:local="clr-namespace:SilkroadLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize"
        Title="{Binding Title}"
        Width="758" Height="473"
        Background="Transparent"
        Loaded="Window_Loaded">
    <!-- Main layout -->
    <Grid Background="{StaticResource LauncherBackground01ImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#00FFFFFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Version -->
            <StackPanel Grid.Column="0"
                        Margin="15 10"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <TextBlock Text="ver "
                           Style="{StaticResource TextBlockBaseStyle}"
                           FontSize="{StaticResource FontSizeSmall}"/>
                <TextBlock Text="{Binding ClientVersion}"
                           Style="{StaticResource TextBlockBaseStyle}"
                           FontSize="{StaticResource FontSizeSmall}"/>
            </StackPanel>

            <!-- Link -->
            <Button Grid.Column="1"
                    Style="{StaticResource ButtonWebsiteLinkStyle}"
                    Margin="15 10"
                    Command="{Binding CommandOpenLink}"
                    CommandParameter="www.silkroadonline.net">
            </Button>
        </Grid>
        
    </Grid>
</Window>