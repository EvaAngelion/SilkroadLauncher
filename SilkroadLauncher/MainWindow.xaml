<Window x:Class="SilkroadLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:htmlrender="clr-namespace:TheArtOfDev.HtmlRenderer.WPF"
        xmlns:local="clr-namespace:SilkroadLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Title="{Binding Title}"
        Width="758" Height="473"
        Background="Transparent"
        UseLayoutRounding="True"
        Loaded="Window_Loaded">
    <!-- Main layout -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="48"/>
            <!-- Body -->
            <RowDefinition/>
            <!-- Main buttons -->
            <RowDefinition Height="78"/>
        </Grid.RowDefinitions>

        <!-- Background draggable -->
        <Border Grid.RowSpan="3"
                MouseLeftButtonDown="Control_MouseLeftButtonDown_DragWindow"
                Background="{StaticResource LauncherBackground01ImageBrush}"/>

        <!-- Header -->
        <Grid Grid.Row="0"
              Margin="15 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Version -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <TextBlock Text="ver "
                           Style="{StaticResource TextBlockBaseStyle}"
                           FontSize="{StaticResource FontSizeSmall}"/>
                <TextBlock Text="{Binding ClientVersion}"
                           Style="{StaticResource TextBlockBaseStyle}"
                           FontSize="{StaticResource FontSizeSmall}"/>
            </StackPanel>

            <!-- Link -->
            <Button Grid.Column="1"
                    Style="{StaticResource ButtonWebsiteLinkStyle}"
                    Command="{Binding CommandOpenLink}"
                    CommandParameter="www.silkroadonline.net">
            </Button>
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1"
              Margin="5 3">
            <!-- Announcements, Notices & Language -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="21*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Announcements -->
            <Grid Grid.Column="0"
                  Margin="1"/>

            <!-- Notices & Language -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="62"/>
                </Grid.RowDefinitions>
                
                <!-- Notices -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="191"/>
                    </Grid.RowDefinitions>

                    <!-- Subject -->
                    <Grid Grid.Row="0"
                          Margin="2 25 4 3">
                        <ListBox Style="{StaticResource NoticeListBox}"
                                 ItemsSource="{Binding WebNotices}"
                                 SelectedItem="{Binding SelectedWebNotice}"
                                 Foreground="#FAE9B6"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                        </ListBox>
                    </Grid>

                    <!-- Article -->
                    <Grid Grid.Row="1"
                          Margin="4">
                        <ScrollViewer Style="{StaticResource NoticeScrollViewer}"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <!-- Notice Message (HTML) -->
                            <htmlrender:HtmlPanel Background="Transparent"
                                                  BaseStylesheet="body{color:#eee; font-size:13px} a{color:#009e99;} b{color:#ffff00;}"
                                                  Text="{Binding SelectedWebNotice.Article}"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>
                
                <!-- Language Selection -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource ButtonLanguageSelectImageStyle}"
                            Width="233" Height="63"/>

                    <Border Background="{StaticResource LanguageSelectBackgroundImageBrush}">
                        <TextBlock Text="{Binding Config.Language}"
                                   Style="{StaticResource TextBlockBaseStyle}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Foreground="#FFD200"
                                   FontWeight="Bold"
                                   FontSize="{StaticResource FontSizeLarge}"/>
                    </Border>

                </Grid>
                
            </Grid>

        </Grid>
        
        <!-- Main buttons -->
        <Grid Grid.Row="2"
              Margin="6 3 6 42">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="167"/>
            </Grid.ColumnDefinitions>

            <!-- Options -->
            <Button Grid.Column="0"
                    Style="{StaticResource ButtonOptionImageStyle}"
                    Width="122" Height="24"/>
            <!-- Wiki link -->
            <Button Grid.Column="1"
                    Style="{StaticResource ButtonGuideImageStyle}"
                    Width="128" Height="24"
                    Command="{Binding CommandOpenLink}"
                    CommandParameter="www.google.com"/>
            <!-- Youtube link -->
            <Button Grid.Column="2"
                    Style="{StaticResource ButtonMovieImageStyle}"
                    Width="129" Height="24"
                    Command="{Binding CommandOpenLink}"
                    CommandParameter="www.youtube.com"/>
            <!-- Exit -->
            <Button Grid.Column="3"
                    Style="{StaticResource ButtonExitImageStyle}"
                    Width="163" Height="24"
                    Command="{Binding CommandClose}"/>

            <!-- Start button -->
            <Button Grid.Column="4"
                    Visibility="{Binding CanStartGame,Converter={local:BooleanToVisibilityConverter}}"
                    Style="{StaticResource ButtonStartImageStyle}"
                    Width="167" Height="30"
                    Command="{Binding CommandStartGame}"/>

        </Grid>

    </Grid>
</Window>