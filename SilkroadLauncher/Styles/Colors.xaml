<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SilkroadLauncher">

    <Color x:Key="BackgroundMain">#303841</Color>
    <SolidColorBrush x:Key="BackgroundMainBrush" Color="{StaticResource BackgroundMain}"/>

    <Color x:Key="BackgroundLighter">#3a4750</Color>
    <SolidColorBrush x:Key="BackgroundLighterBrush" Color="{StaticResource BackgroundLighter}"/>

    <Color x:Key="ForegroundMain">#F1F1F1</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}"/>

    <Color x:Key="ForegroundMainLighter">#CAC9CF</Color>
    <SolidColorBrush x:Key="ForegroundMainLighterBrush" Color="{StaticResource ForegroundMainLighter}"/>

    <Color x:Key="ForegroundMainInversed">#FF0000</Color>
    <SolidColorBrush x:Key="ForegroundMainInversedBrush" Color="{StaticResource ForegroundMainInversed}"/>

    <Color x:Key="HighlightMain">#e0a021</Color>
    <SolidColorBrush x:Key="HighlightMainBrush" Color="{StaticResource HighlightMain}"/>

    <LinearGradientBrush x:Key="BorderBaseBrush" EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
        <GradientStop Color="#e0a021" Offset="0.05"/>
        <GradientStop Color="#FBE533" Offset="0.07"/>
        <GradientStop Color="#914712" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonBackgroundBaseBrush" EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="0,0">
        <GradientStop Color="#18358E" Offset="0.05"/>
        <GradientStop Color="#252459" Offset="0.3"/>
        <GradientStop Color="#283549" Offset="0.9"/>
        <GradientStop Color="#215966" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>